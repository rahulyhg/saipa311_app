<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    android:id="@+id/junk_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:paddingBottom="100dp">
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress_animation" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/icon_gray_color"
            android:background="@drawable/rounded_view_image_background"
            android:src="@drawable/ic_out_dated_car"/>
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeLarge" />
        <TextView
            android:id="@+id/startAndEndYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/bottomNavigationViewItemColor"
            android:textSize="@dimen/textSizeLarge" />
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/bottomNavigationViewItemColor"
            android:textSize="@dimen/textSizeNormal" />
        <Button
            android:id="@+id/openRequestForm"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_button"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/textSizeNormal"
            android:text="درخواست" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold"
                android:gravity="right"
                android:text="سفارش شما در حال بررسی است"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bottomNavigationViewItemColor"
                android:textSize="@dimen/textSizeNormal"
                android:gravity="right"
                android:text="منتظر تماس اپراتور بمانید"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:tint="@color/icon_gray_color"
                android:background="@drawable/rounded_view_image_background"
                android:src="@drawable/ic_access_alarms_black_48dp"
                android:layout_gravity="left|center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/icon_gray_color"
                android:background="@drawable/rounded_view_image_background"
                android:src="@drawable/ic_out_dated_car"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold"
                android:gravity="center"
                android:text="در حال حاضر هیچگونه طرح تعویض خودروی فرسوده در این نمایندگی وجود ندارد."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bottomNavigationViewItemColor"
                android:textSize="@dimen/textSizeNormal"
                android:gravity="center"
                android:text="منتظر طرح های جدید ما بمانید"/>
    </LinearLayout>
</ViewFlipper>