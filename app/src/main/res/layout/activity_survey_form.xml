<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolBarStyle"
        android:background="@android:color/background_light"
        android:elevation="4dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        card_view:cardBackgroundColor="@android:color/background_light"
                        card_view:cardElevation="2dp"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardPreventCornerOverlap="false">
                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:paddingBottom="10dp">
                            <TextView
                                android:id="@+id/_repInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textSizeNormal"
                                android:textStyle="bold"
                                android:gravity="right"
                                android:text="نمایندگی ۳۱۱ - کوچک عظیمی"/>
                            <TextView
                                android:id="@+id/_serviceSubject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/tab_indicator_text"
                                android:textSize="@dimen/textSizeNormal"
                                android:gravity="right"
                                android:text="موضوع: تعمیر جلوبندی خودرو"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textSizeNormal"
                                android:gravity="right"
                                android:text="آيا در گذشته به اين نمايندگي مراجعه نموده ايد ؟"/>
                            <RadioGroup
                                android:id="@+id/input_second_visit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right"
                                android:layoutDirection="rtl">
                                <RadioButton
                                    android:id="@+id/radio_second_visit_Yes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layoutDirection="rtl"
                                    android:text="بله" />
                                <RadioButton
                                    android:id="@+id/radio_second_visit_No"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layoutDirection="rtl"
                                    android:text="خیر" />
                            </RadioGroup>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <EditText android:id="@+id/input_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:hint="نام و نام خانوادگی" />
                            </android.support.design.widget.TextInputLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="wrap_content">
                                    <EditText android:id="@+id/input_idNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:hint="شماره شناسنامه" />
                                </android.support.design.widget.TextInputLayout>
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="2dp"
                                    android:layout_height="wrap_content">
                                    <EditText android:id="@+id/input_fatherName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:hint="نام پدر" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <EditText android:id="@+id/input_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:enabled="false"
                                    android:hint="شماره همراه" />
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <EditText android:id="@+id/btn_birthDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:onClick="openDatePicker"
                                    android:hint="تاریخ تولد" />
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <EditText android:id="@+id/input_nationalCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:hint="کد ملی" />
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <EditText android:id="@+id/input_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:hint="آدرس محل سکونت" />
                            </android.support.design.widget.TextInputLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textSizeNormal"
                                android:gravity="right"
                                android:text="تحصیلات"/>
                            <Spinner
                                android:id="@+id/input_education"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:layout_marginTop="4dp"
                                android:spinnerMode="dropdown" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textSizeNormal"
                                android:gravity="right"
                                android:text="جنسیت"/>
                            <RadioGroup
                                android:id="@+id/input_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:orientation="horizontal"
                                android:layoutDirection="rtl">
                                <RadioButton
                                    android:id="@+id/radio_sex_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layoutDirection="rtl"
                                    android:text="مرد" />
                                <RadioButton
                                    android:id="@+id/radio_sex_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layoutDirection="rtl"
                                    android:text="زن" />
                            </RadioGroup>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textSizeNormal"
                                android:gravity="right"
                                android:text="نوع سوخت خودرو"/>
                            <Spinner
                                android:id="@+id/input_fuelType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:layout_marginTop="4dp"
                                android:spinnerMode="dropdown" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/textSizeNormal"
                                android:gravity="right"
                                android:text="علت مراجعة  شما به نمايندگي چه بوده است ؟"/>
                            <LinearLayout
                                android:id="@+id/input_causeOfReferralItems"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"></LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingBottom="10dp">
                            <LinearLayout
                                android:id="@+id/questionForm"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:paddingBottom="10dp">
                            </LinearLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">
                                <EditText android:id="@+id/input_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:hint="انتقاد یا پیشنهاد" />
                            </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
</LinearLayout>