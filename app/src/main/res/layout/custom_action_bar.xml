<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:id="@+id/action_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="نمایندگی سایپا"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/title_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#77ffffff"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textSize="11sp"
            android:text="کد ۳۱۱"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/action_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
<!--        <ImageButton
            android:id="@+id/popUpMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_notifications_none"/>-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ic_notif"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:onClick="openNotifDrawer"
                android:tint="#FFFFFF"
                android:src="@drawable/ic_notif" />
            <LinearLayout
                android:id="@+id/notif_unread_count_alarm"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@id/ic_notif"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_view_notif_count">
                <TextView
                    android:id="@+id/notif_unread_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>